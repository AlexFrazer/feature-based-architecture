{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["es2015", "dom"],
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "~": ["./src"],
      "~/*": ["./src/*"],
      "@totemic/elements": ["../elements"],
      "@totemic/utils": ["../utils"]
    }
  },
  "references": [{ "path": "../utils" }, { "path": "../elements" }]
}
